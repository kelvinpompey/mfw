extends layout

block content
    #main
        #coverimage(class="carousel slide")
            ol.carousel-indicators
                li(data-target="#coverimage", data-slide-to="0", class="active")
                li(data-target="#coverimage", data-slide-to="1", class="")
            .carousel-inner
                .item(class='active')
                    img(src='images/frame1.png')
                .item(
                    img(src="images/frame2.png")
            a(class="carousel-control left",href="#coverimage", data-slide="prev")
                img(src='/images/left-arrow.png')
            a(class="carousel-control right",href="#coverimage", data-slide="next")
                img(src='/images/right-arrow.png')
        #imageslider(class="carousel slide",data-interval="false")
            ol.carousel-indicators
                each group, index in groups
                    if index == 0
                        li(data-target="#imageslider",data-slide-to=index, class="active")
                    else 
                        li(data-target="#imageslider",data-slide-to=index, class="active")                        
            .carousel-inner
                each group, index in groups
                    if index == 0
                        div(class="item active")
                            include item
                    else
                        div(class="item")
                            include item                            
            a(class="carousel-control left", href="#imageslider", data-slide="prev")
                img(src='/images/left-arrow.png')
            a(class="carousel-control right", href="#imageslider", data-slide="next")
                img(src='/images/right-arrow.png')